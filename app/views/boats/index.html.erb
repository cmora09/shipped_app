<h1>Boats#index</h1>
<p>Find me in app/views/boats/index.html.erb</p>
<%= link_to "Create a new boat", new_boat_path(current_user) %>

<% @boats.each do |boat| %>
	<div id="boats">
		<ul>
			<h2><%= boat.boat_name %></h2>
			<li>Container Capacity: <%= boat.container_cap %></li>
			<li>Current Location: <%= boat.location %></li>
		</ul>
		<ul>
			<h4>Pending Jobs for <%= boat.boat_name %> :
			 <% boat.jobs.each do |job| %></h4>
				<li><%= job.job_name %> <%= link_to "Edit Job Details", edit_boat_job_path(boat.id, job.id) %></li>
					<% end %>
		</ul>
		<p><%= link_to "Edit Boat Details", edit_boat_path(boat.id) %>
		<%= link_to "Assign New Job", new_boat_job_path(boat.id) %>	</p>
	</div>
<% end %>